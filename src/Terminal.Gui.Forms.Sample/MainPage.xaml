<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Terminal.Gui.Forms.Sample.MainPage"
             Title="Xamarin.Forms Console Backend">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackLayout>
                <Label 
                    Text="Login"
                    TextColor="White"
                    Margin="0, 0, 0, 6"/>
                <Label 
                    Text="Username:"
                    TextColor="White"/>
                <Entry />
                <Label 
                    Text="Password:"
                    TextColor="White"/>
                <Entry 
                    IsPassword="True" />
                <Label
                        Text="Remember me:"
                        TextColor="White" />
                <Switch />
                <Button
                    x:Name="LoginBtn" 
                    Text="Login"/>
            </StackLayout>
            <Grid 
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label 
                    Grid.Row="0"
                    Text="ListView"
                    TextColor="White"
                    Margin="0, 0, 0, 6"/>
                <ListView
                    Grid.Row="1">
                    <ListView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>mono</x:String>
                            <x:String>monodroid</x:String>
                            <x:String>monotouch</x:String>
                            <x:String>monodevelop</x:String>
                        </x:Array>
                    </ListView.ItemsSource>
                </ListView>
            </Grid>
            <StackLayout
                Grid.Column="2">
                <Label 
                    Text="Colors"
                    TextColor="White"
                    Margin="0, 0, 0, 6"/>
                <Label 
                    Text="Black"
                    TextColor="Black"/>
                <Label 
                    Text="Green"
                    TextColor="Green"/>
                <Label 
                    Text="Magenta"
                    TextColor="Magenta"/>
                <Label 
                    Text="Red"
                    TextColor="Red"/>
                <Label 
                    Text="Yellow"
                    TextColor="Yellow"/>
                <Label 
                    Text="White"
                    TextColor="White"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>